
<div id="question">
  <div>
    <h5><% question.author %> спрашивает:</h5>
  </div>
  <div>
    <% question.text %>
  </div>
</div>

<div>
  <a id="timer-button" href="#answer">Время!</a>
</div>

<div class="hidden">
  <div id="answer">
    <div><h5>Ответ</h5></div>
    <div>
      <% question.answer %> 
      <% question.comment %>
    </div>
  </div>
</div>

<div class="hidden">
  <a id="next-button" href="/">Еще!</a>
</div>
